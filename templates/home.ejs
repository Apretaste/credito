<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" class="active">Crédito</a></li>
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'CREDITO OBTENER'})">Ayuda</a></li>
		</ul>
	</div>

	<div class="col s12">
		<h1 class="green-text">§<%= Number.parseFloat(credit).toFixed(2) %></h1>

		<% if(canTransfer) { %>
			<p><a class="waves-effect waves-light btn-small" href="#" onclick="apretaste.send({command:'CREDITO ENVIAR'})">Transferir</a></p>
		<% } else { %>
			<p class="small red-text text-darken-1">Necesita nivel Topacio o superior para transferir.</p>
		<% } %>

		<% if(items.length) { %>
			<table class="striped">
				<% items.forEach(function(item){ %>
					<tr>
						<td>
							<%= item.type == 'purchase' ? "Canje" : (item.origin=='received' ? 'Recibido' : "Enviado") %><br/>
							<small class="nowrap text-gray"><%= item.datetime %></small>
						</td>
						<td><%= item.desc %></td>
						<td>
							<% if(item.origin == 'sent') { %>
								<span class="red-text">-§<%= Number.parseFloat(item.amount).toFixed(2) %>
							<% } else { %>
								<span class="green-text">+§<%= Number.parseFloat(item.amount).toFixed(2) %>
							<% } %>
						</td>
					</tr>
				<% }) %>
			</table>
		<% } %>
	</div>
</div>
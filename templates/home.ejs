<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" class="active">Crédito</a></li>
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'CREDITO OBTENER'})">¿Más Créditos?</a></li>
		</ul>
	</div>

	<div class="col s12">
		<h1 class="green-text">§<%= credit %></h1>

		<p>Use su crédito para canjear dentro de la app.</p>

		<% if(items.length) { %>
			<table class="striped">
				<% items.forEach(function(item){ %>
					<tr>
						<td>
							<div><%= item.reason %></div>
							<span class="chip tiny clear grey-text text-darken-2"><i class="fas fa-calendar"></i> <%= item.datetime %></span>
						</td>
						<td><%= item.desc %></td>
						<td>
							<% if(item.origin == 'sent') { %>
								<span class="red-text">-§<%= Number.parseFloat(item.amount).toFixed(2) %>
							<% } else { %>
								<span class="green-text">+§<%= Number.parseFloat(item.amount).toFixed(2) %>
							<% } %>
						</td>
					</tr>
				<% }) %>
			</table>
		<% } %>
	</div>
</div>